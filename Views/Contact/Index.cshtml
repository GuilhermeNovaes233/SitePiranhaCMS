@model SitePiranhaCMS.Models.EmailSettings;

@{
    ViewData["Title"] = "Contato";
}

<!-- Start top-section Area -->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row justify-content-between align-items-center text-center banner-content">
            <div class="col-lg-12">
                <h1 class="text-white"> Contato </h1>
                <p> Buscamos a melhor solução para você!</p>
            </div>
        </div>
    </div>
</section>
<!-- End top-section Area -->
<!--================Contact Area =================-->
<section class="contact_area section-gap">
    <div class="container">
        <iframe id="mapBox"
                class="mapBox"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.1977213285204!2d-46.65867588440687!3d-23.56134126747814!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59c8da0aa315%3A0xd59f9431f2c9776a!2sAv.%20Paulista%2C%20S%C3%A3o%20Paulo%20-%20SP!5e0!3m2!1spt-BR!2sbr!4v1604071757054!5m2!1spt-BR!2sbr"
                frameborder="0"
                allowfullscreen=""
                aria-hidden="false"
                tabindex="0"
                width="100%"
                height="100%">
        </iframe>
        
        <div class="row">
            <div class="col-lg-3">
                <div class="contact_info">
                    <div class="info_item">
                        <i class="fa fa-home"></i>
                        <h6> Avenida Paulista </h6>
                        <p> São Paulo - SP Brasil </p>
                    </div>
                    <div class="info_item">
                        <i class="fa fa-phone"></i>
                        <h6><a href="#">(11) 97070-7070 <br /> (11) 97070-7070</a></h6>
                        <p>Segunda a Sexta 08:00 às 18:00 </p>
                    </div>
                    <div class="info_item">
                        <i class="fa fa-envelope"></i>
                        <h6><a href="#"> teste@example.com </a></h6>
                        <p> Envie-nos sua consulta a qualquer momento! </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                    @using (Html.BeginForm("sendmail", "contact", FormMethod.Post, new { htmlAttributes = new { @class = "row contact_form", novalidate = "novalidate" } }))
                    {
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.ToEmail, new
                                    {
                                           htmlAttributes = new
                                        {
                                           @class = "form-control",
                                           type = "text",
                                           id = "name",
                                           name = "name",
                                           placeholder = "Nome",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Nome'",
                                           required = ""
                                        }
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Subject, new
                                    {
                                           htmlAttributes = new
                                        {
                                           @class = "form-control",
                                           type = "text",
                                           id = "assunto",
                                           name = "assunto",
                                           placeholder = "Assunto",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Assunto'",
                                           required = ""
                                        }
                                    })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Message, new
                                    {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control",
                                           type = "text",
                                           id = "message",
                                           name = "message",
                                           rows = "1",
                                           placeholder = "Gostaria de saber sobre a disponibilidade e os preços. Preciso de ajuda com o seguinte:",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Gostaria de saber sobre a disponibilidade e os preços. Preciso de ajuda com o seguinte:'",
                                           required = ""
                                        }
                                    })
                                </div>
                            </div>
                            <div class="col-md-12 text-right">
                                <button type="submit" value="submit" class="btn primary-btn">
                                    Enviar
                                </button>
                            </div>
                    }

            </div>
        </div>
    </div>
</section>
<!--================Contact Area =================-->
<!--================Contact Success and Error message Area =================-->
<div id="success" class="modal modal-message fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <i class="ti-close"></i>
                </button>
                <h2>Thank you</h2>
                <p>Your message is successfully sent...</p>
            </div>
        </div>
    </div>
</div>

<!-- Modals error -->

<div id="error" class="modal modal-message fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <i class="ti-close"></i>
                </button>
                <h2>Sorry !</h2>
                <p>Something went wrong</p>
            </div>
        </div>
    </div>
</div>
